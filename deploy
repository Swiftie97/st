set -e
set -vx

export PY=python

export GITROOT="$(pwd)"
export BUILDROOT="${GITROOT}/../misc-build"
export SYSROOT="${BUILDROOT}/sysroot"

cd ${BUILDROOT}
rm -rf build
pyqtdeploycli --target win-32 --project ${GITROOT}/epyqlib.pdy build
cd build
sed -i 's/LIBS += -l(ssl|crypto)/LIBS += -lssl -lcrypto/' epyqlib.pro
export PATH="${SYSROOT}/native/src/mxe/usr/i686-w64-mingw32.static/qt5/bin:${PATH}"
export PATH="${SYSROOT}/native/src/mxe/usr/bin:${PATH}"
echo $PATH
pwd
qmake
make
./epyq
